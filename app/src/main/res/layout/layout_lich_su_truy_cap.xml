<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgView_background_lich_su"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/background_lich_su_tc" />

    <TextView
        android:id="@+id/tv_ten_khach_thue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Lê Hoàng Minh Thành"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toStartOf="@+id/imgView_background_lich_su"
        app:layout_constraintTop_toTopOf="@+id/imgView_background_lich_su" />

    <TextView
        android:id="@+id/tv_gio_ra_vao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="16:20:09"
        android:textColor="#292929"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/imgView_background_lich_su"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten_khach_thue" />

    <TextView
        android:id="@+id/tv_ngay_ra_vao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="03/10/2023"
        android:textColor="#292929"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/tv_gio_ra_vao"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten_khach_thue" />

    <TextView
        android:id="@+id/tv_name_khu_tro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Khu trọ 1"
        android:textColor="#8F00FF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgView_background_lich_su"
        app:layout_constraintTop_toTopOf="@+id/imgView_background_lich_su" />

    <ImageView
        android:id="@+id/img_icon_ra_vao"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="@+id/imgView_background_lich_su"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_khu_tro"
        app:srcCompat="@drawable/icon_in" />

</androidx.constraintlayout.widget.ConstraintLayout>